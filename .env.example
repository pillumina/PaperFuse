# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# LLM Provider Configuration
# Options: claude, glm
LLM_PROVIDER=glm

# Anthropic Claude (required if LLM_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key
# Optional: Specify custom models
# CLAUDE_QUICK_MODEL=claude-haiku
# CLAUDE_DEEP_MODEL=claude-sonnet

# ZhipuAI GLM (required if LLM_PROVIDER=glm)
ZHIPUAI_API_KEY=your_zhipuai_api_key
# Optional: Specify custom models
# GLM_QUICK_MODEL=glm-4-flash
# GLM_DEEP_MODEL=glm-4-plus

# ArXiv
ARXIV_CATEGORIES=cs.AI,cs.LG,stat.ML

# Cron Job Security
CRON_SECRET=generate_a_random_secret_string_here
